generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DeployModel {
  id                   String           @id @default(uuid()) @map("_id")
  deployModelName      String
  deployModelType      String
  databaseType         String
  executionEnvironment String
  ownerEmail           String
  codePath             CodePath?
  credentialsPath      CredentialsPath?
}

model CodePath {
  id               String      @id @default(uuid()) @map("_id")
  backendCodePath  String
  frontendCodePath String      @default("")
  deployModel      DeployModel @relation(fields: [deployModelId], references: [id])
  deployModelId    String      @unique
}

model CredentialsPath {
  id                  String      @id @default(uuid()) @map("_id")
  accessKeyIdPath     String
  secretAccessKeyPath String
  deployModel         DeployModel @relation(fields: [deployModelId], references: [id])
  deployModelId       String      @unique
}
